generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model SyncHistory {
  id                  String   @id @default(cuid())
  direction           String
  sourcePlaylistId    String
  sourcePlaylistName  String
  targetPlaylistId    String?
  targetPlaylistName  String?
  totalTracks         Int
  matched             Int
  notFound            Int
  alreadyExisted      Int
  lowConfidence       Int
  createdAt           DateTime @default(now())

  matchRecords        MatchRecord[]
}

model MatchRecord {
  id              String   @id @default(cuid())
  syncHistoryId   String
  sourceTrackId   String
  sourceTitle     String
  sourceArtist    String
  targetTrackId   String?
  targetTitle     String?
  targetArtist    String?
  confidence      Float
  status          String
  createdAt       DateTime @default(now())

  syncHistory     SyncHistory @relation(fields: [syncHistoryId], references: [id])

  @@index([sourceTrackId])
  @@index([targetTrackId])
}

model MatchCache {
  id              String   @id @default(cuid())
  sourceTrackId   String
  targetTrackId   String
  confidence      Float
  direction       String
  createdAt       DateTime @default(now())
  expiresAt       DateTime

  @@unique([sourceTrackId, direction])
  @@index([expiresAt])
}
